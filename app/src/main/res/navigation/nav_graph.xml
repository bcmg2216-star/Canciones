<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cancionesFragment">

    <fragment
        android:id="@+id/cancionesFragment"
        android:name="com.example.canciones.CancionesFragment"
        android:label="Mis Canciones"
        tools:layout="@layout/fragment_canciones">
        <action
            android:id="@+id/action_canciones_to_detalle"
            app:destination="@id/detalleCancionFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSanti"
        android:name="com.example.canciones.FragmentSanti"
        android:label="Perfil"
        tools:layout="@layout/fragment_santi" />

    <fragment
        android:id="@+id/detalleCancionFragment"
        android:name="com.example.canciones.DetalleCancionFragment"
        android:label="Detalle">
        <argument
            android:name="posicion"
            app:argType="integer" />
    </fragment>
</navigation>